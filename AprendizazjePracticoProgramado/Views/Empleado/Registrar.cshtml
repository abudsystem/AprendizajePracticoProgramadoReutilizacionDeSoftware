
@{
    ViewBag.Title = "Registrar";
}

<html>
<head>
    <link href="~/Content/css/Registrar.css" rel="stylesheet" />
</head>
<body>
    <main class="signup-page">

        <form @Url.Action("Registrar", "Acceso") method="post" class="signup-form">
            <h2>Registro de Empleados</h2>
            <div class="form-wrapper">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre" placeholder="Ingrese su nombre" required />
                </div>

                <div class="form-group">
                    <label for="apellido">Apellido</label>
                    <input type="text" name="apellido" id="apellido" placeholder="Ingrese su apellido" required />
                </div>

                <div class="form-group">
                    <label for="cedula">Cedula</label>
                    <input type="text" name="ci" id="ci" placeholder="Ingrese su número de identificación" required />
                </div>

                <div class="form-group">
                    <label for="fechaNacimiento">Año de Nacimiento</label>
                    <input type="date" name="fechaNacimiento" id="fechaNacimiento" placeholder="Ingrese su año de nacimeinto" required />
                </div>

                <div class="form-group">
                    <label>Selecciona tu Género</label>
                    <div class="genero-buttons">
                        <label>
                            <input type="radio" value="F" name="genero" id="femenino" />
                            Femenino
                        </label>

                        <label>
                            <input type="radio" value="M" name="genero" id="masculino" />
                            Masculino
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="correo">Email</label>
                    <input type="text" name="correo" id="correo" placeholder="ejemplo@correo.com" required />
                </div>

                <div class="form-group">
                    <label for="clave">Contraseña</label>
                    <input type="password" name="clave" id="clave" required />
                </div>

                <button type="submit" class="btn-login"> Iniciar Sesión </button>

                <p>
                    Si ya tiene una cuenta.
                    <a href="/Acceso/Autenticar"> Inicia sesión</a>
                </p>
            </div>
        </form>
    </main>
</body>
</html>
